<!DOCTYPE html>
<html>
<head>
  <title>onlineNotes Service | <%= @title %></title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults, 'jquery.validate.min.js' %>
  <%= javascript_include_tag 'https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.6/jquery-ui.js' %>
  <%= javascript_include_tag '/javascripts/wmd/wmd.js' %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header">
     <%= render 'layouts/header' %>
</div>

<div class="container">
		<div class="span-25" id="maincontent">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
        <% if @notes.nil? %>
          <div class="center_back">
            <%= yield %>
          </div>
        <% else %>
          <%= yield %>
        <% end %>
		</div>
	<div class="span-25 last" id="footer">
      <%= render 'layouts/footer' %>
      <%= debug(params) if Rails.env.development? %>
	</div>
</div>
</body>
</html>
