<%= div_for note do %>
  <span class="dateandoptions">
  <% if signed_in? && @current_user.id == note.user_id %>
    You write <%= time_ago_in_words(note.created_at) %> ago<br />
    <%= link_to 'Edit', edit_note_path(note), :class => "edit" %><br />
    <%= link_to 'Delete', note_path(note), :method => :delete, :class => "delete"  %>
  <% else %>
    <%= note.writer %> write <%= time_ago_in_words(note.created_at) %> ago<br />
  <% end %>
  </span>
  <%= link_to note.title, note %> 
  <div class="detail">
    <%= note.detail.html_safe %>
  </div>
<% end %>
