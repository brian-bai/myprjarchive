<% @histories.each do |history| %>
  <tr>
    <td><%= history.company %></td>
    <td><%= history.position %></td>
    <td><%= history.startdate %></td>
    <td><%= history.enddate %></td>
    <td><%= history.details %></td>
    <td><%= link_to 'Show', user_history_path(@target_user, history) %></td>
    <td><%= link_to 'Edit', edit_user_history_path(@target_user,history) %></td>
    <td><%= link_to 'Destroy', user_history_path(@target_user, history), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

